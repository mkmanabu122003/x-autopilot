{
  "name": "x-autopilot",
  "version": "1.0.0",
  "description": "X (Twitter) auto-posting and competitor analysis tool",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npx vite --port 3000",
    "client:build": "cd client && npx vite build",
    "start": "node server/index.js",
    "db:migrate": "node server/db/migrate.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "review": "node scripts/code-review.js",
    "review:base": "node scripts/code-review.js --base=main"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.95.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "node-cron": "^3.0.3",
    "oauth-1.0a": "^2.2.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^30.2.0",
    "nodemon": "^3.1.4"
  }
}
